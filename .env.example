# ===========================================
# AI交易机器人环境变量配置模板
# ===========================================

# 🧠 DeepSeek AI配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# 💰 Aster交易所配置
ASTER_USER_ADDRESS=your_aster_user_address_here
ASTER_SIGNER_ADDRESS=your_aster_signer_address_here
ASTER_PRIVATE_KEY=your_aster_private_key_here
ASTER_SIGNATURE_METHOD=hmac

# 🔄 交易配置
TRADING_EXCHANGE=ASTER
TRADING_ENABLED=false
PRODUCTION_MODE=false
MAX_POSITION_SIZE=0.01
LEVERAGE=5
SYMBOL=BTCUSDT

# 🛡️ 风险控制配置
MAX_DAILY_LOSS=100
MAX_POSITION_COUNT=1
MIN_CONFIDENCE_LEVEL=MEDIUM
ENABLE_EMERGENCY_STOP=true

# 📊 数据库配置
DATABASE_PATH=production_dashboard.db
BACKUP_ENABLED=true

# 📝 日志配置
LOG_LEVEL=INFO

# 🌐 Dashboard配置
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=5000

# ⏰ 交易间隔配置 (秒)
TRADING_INTERVAL=900

# 🔍 调试配置
DEBUG_MODE=false
ENABLE_VERBOSE_LOGGING=false

# ===========================================
# 配置说明
# ===========================================

# TRADING_ENABLED:
#   true  - 启用真实交易 (谨慎使用)
#   false - 模拟交易模式 (推荐用于测试)

# PRODUCTION_MODE:
#   true  - 生产环境模式 (严格安全检查)
#   false - 测试模式

# MIN_CONFIDENCE_LEVEL:
#   LOW    - 执行所有信号
#   MEDIUM - 执行中等和高信心度信号
#   HIGH   - 仅执行高信心度信号

# LOG_LEVEL:
#   DEBUG   - 详细调试信息
#   INFO    - 一般信息 (推荐)
#   WARNING - 警告和错误
#   ERROR   - 仅错误信息

# ===========================================
# 安全提醒
# ===========================================
# 1. 请勿将 .env 文件上传到公共仓库
# 2. 定期更换API密钥
# 3. 使用最小权限原则配置API
# 4. 启用双重验证功能
# ===========================================
